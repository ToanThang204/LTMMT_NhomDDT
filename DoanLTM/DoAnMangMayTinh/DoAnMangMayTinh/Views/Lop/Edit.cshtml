@model DoAnMangMayTinh.Models.Lop
@{
    ViewData["Title"] = "Sửa lớp";
}

<h2>@ViewData["Title"]</h2>

@* Hiển thị lỗi nếu có *@
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    @* Hidden để giữ lại MaLop khi submit *@
    <input type="hidden" asp-for="MaLop" />

    <div class="form-group">
        <label asp-for="TenLop" class="control-label"></label>
        <input asp-for="TenLop" class="form-control" />
        <span asp-validation-for="TenLop" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
