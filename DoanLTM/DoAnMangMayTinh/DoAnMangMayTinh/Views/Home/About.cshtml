@section Scripts {
    <script>
        // Demo chart data
        let chartData = {
            labels: ['T1', 'T2', 'T3', 'T4', 'T5', 'T6'],
            values: [65, 59, 80, 81, 56, 55],
            colors: ['#667eea', '#764ba2', '#f093fb', '#f5576c', '#4facfe', '#00f2fe']
        };

        // Initialize demo chart
        document.addEventListener('DOMContentLoaded', function() {
            createBarChart('demoChart', chartData);
        });

        // Update chart with random data
        function updateChart() {
            chartData.values = chartData.values.map(() => Math.floor(Math.random() * 100) + 20);
            createBarChart('demoChart', chartData);
            showNotification('Biểu đồ đã được cập nhật!', 'success');
        }

        // Add some interactive animations
        document.querySelectorAll('.dashboard-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px) scale(1.02)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });

        // Animate numbers on page load
        document.querySelectorAll('h5').forEach(h5 => {
            if (h5.textContent.includes('+')) {
                const target = parseInt(h5.textContent);
                let current = 0;
                const increment = target / 30;
                
                const updateNumber = () => {
                    if (current < target) {
                        current += increment;
                        h5.textContent = Math.ceil(current) + '+';
                        setTimeout(updateNumber, 50);
                    } else {
                        h5.textContent = target + '+';
                    }
                };
                
                updateNumber();
            }
        });
    </script>
} 