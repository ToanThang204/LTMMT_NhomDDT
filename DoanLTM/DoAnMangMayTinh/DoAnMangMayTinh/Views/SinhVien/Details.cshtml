@model DoAnMangMayTinh.Models.SinhVien

@{
    ViewData["Title"] = "Chi tiết sinh viên";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Mã SV</dt>
        <dd class="col-sm-10">@Model.ID_SV</dd>

        <dt class="col-sm-2">Họ tên</dt>
        <dd class="col-sm-10">@Model.HoTen</dd>

        <dt class="col-sm-2">Ngày sinh</dt>
        <dd class="col-sm-10">@Model.NgaySinh.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Lớp</dt>
        <dd class="col-sm-10">@Model.Lop?.TenLop</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ID_SV" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>
