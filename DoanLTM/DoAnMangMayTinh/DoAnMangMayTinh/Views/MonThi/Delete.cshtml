@* Views/MonThi/Delete.cshtml *@
@model DoAnMangMayTinh.Models.MonThi
@{
    ViewData["Title"] = "Xoá môn thi";
}
<h2>@ViewData["Title"]</h2>
<h4>Bạn có chắc chắn muốn xoá môn thi này?</h4>
<div>
    <strong>@Model.ID_Mon - @Model.TenMon</strong>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ID_Mon" />
    <button type="submit" class="btn btn-danger">Xoá</button>
    <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
</form>