@model DoAnMangMayTinh.Models.LichThi

@{
    ViewData["Title"] = "Tạo mới lịch thi";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ID_KyThi"></label>
        <select asp-for="ID_KyThi" class="form-control" asp-items="@(ViewBag.ID_KyThi ?? new SelectList(Enumerable.Empty<SelectListItem>()))">
            <option value="">-- Chọn kỳ thi --</option>
        </select>
        <span asp-validation-for="ID_KyThi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ID_Mon"></label>
        <select asp-for="ID_Mon" class="form-control" asp-items="@(ViewBag.ID_Mon ?? new SelectList(Enumerable.Empty<SelectListItem>()))">
            <option value="">-- Chọn môn thi --</option>
        </select>
        <span asp-validation-for="ID_Mon" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ID_Phong"></label>
        <select asp-for="ID_Phong" class="form-control" asp-items="@(ViewBag.ID_Phong ?? new SelectList(Enumerable.Empty<SelectListItem>()))">
            <option value="">-- Chọn phòng thi --</option>
        </select>
        <span asp-validation-for="ID_Phong" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NgayThi"></label>
        <input asp-for="NgayThi" class="form-control" type="date" />
        <span asp-validation-for="NgayThi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GioThi"></label>
        <input asp-for="GioThi" class="form-control" type="time" />
        <span asp-validation-for="GioThi" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
