@model IEnumerable<DoAnMangMayTinh.Models.PhanCong>

@{
    ViewData["Title"] = "Danh sách phân công giáo viên";
}

<style>
    .assignment-page-bg {
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 30px 0;
    }

    .assignment-header {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(15px);
        border-radius: 25px;
        padding: 35px;
        margin-bottom: 30px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
    }

    .assignment-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #667eea, #764ba2, #f093fb, #f5576c);
    }

    .assignment-title {
        color: #fff;
        font-weight: 800;
        font-size: 3rem;
        margin-bottom: 15px;
        text-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        letter-spacing: 1px;
    }

    .assignment-subtitle {
        color: rgba(255, 255, 255, 0.9);
        font-size: 1.2rem;
        margin-bottom: 0;
        font-weight: 500;
    }

    .assignment-card {
        background: rgba(255, 255, 255, 0.98);
        border-radius: 25px;
        padding: 35px;
        margin-bottom: 25px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        border: 2px solid rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(15px);
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }

    .assignment-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #667eea, #764ba2, #f093fb);
    }

    .assignment-card:hover {
        transform: translateY(-8px) rotateX(5deg);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
    }

    .assignment-table {
        background: rgba(255, 255, 255, 0.98);
        border-radius: 25px;
        overflow: hidden;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        border: 2px solid rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(15px);
    }

    .assignment-table thead {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .assignment-table th {
        border: none;
        padding: 25px 20px;
        font-weight: 700;
        font-size: 1.2rem;
        text-align: center;
        letter-spacing: 0.5px;
    }

    .assignment-table td {
        border: none;
        padding: 25px 20px;
        text-align: center;
        vertical-align: middle;
        border-bottom: 2px solid rgba(0, 0, 0, 0.05);
        font-weight: 500;
    }

    .assignment-table tbody tr {
        transition: all 0.4s ease;
        position: relative;
    }

    .assignment-table tbody tr:hover {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        transform: scale(1.02) translateX(5px);
    }

    .assignment-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 15px;
        padding: 12px 30px;
        color: white;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        text-decoration: none;
        display: inline-block;
        margin: 5px;
    }

    .assignment-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
        color: white;
        text-decoration: none;
    }

    .assignment-btn-add {
        background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
        box-shadow: 0 4px 15px rgba(78, 205, 196, 0.4);
    }

    .assignment-btn-add:hover {
        box-shadow: 0 6px 20px rgba(78, 205, 196, 0.6);
    }

    .assignment-btn-edit {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        box-shadow: 0 4px 15px rgba(240, 147, 251, 0.4);
    }

    .assignment-btn-edit:hover {
        box-shadow: 0 6px 20px rgba(240, 147, 251, 0.6);
    }

    .assignment-btn-delete {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
        box-shadow: 0 4px 15px rgba(255, 107, 107, 0.4);
    }

    .assignment-btn-delete:hover {
        box-shadow: 0 6px 20px rgba(255, 107, 107, 0.6);
    }

    .assignment-btn-details {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

    .assignment-btn-details:hover {
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
    }

    .floating-animation {
        animation: float 3s ease-in-out infinite;
    }

    .keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }

    .pulse-animation {
        animation: pulse 2s ease-in-out infinite;
    }

    .keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    .assignment-teacher {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
        display: inline-block;
    }

    .assignment-schedule {
        background: linear-gradient(135deg, #f093fb, #f5576c);
        color: white;
        padding: 6px 12px;
        border-radius: 15px;
        font-weight: 600;
        font-size: 0.8rem;
        display: inline-block;
    }

    .assignment-role {
        padding: 6px 12px;
        border-radius: 15px;
        font-weight: 600;
        font-size: 0.8rem;
        display: inline-block;
    }

    .assignment-role-supervisor {
        background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
        color: white;
    }

    .assignment-role-assistant {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
    }

    .assignment-role-observer {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
        color: white;
    }
</style>

<div class="assignment-page-bg">
    <div class="container">
        <!-- Header Section -->
        <div class="assignment-header floating-animation">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="assignment-title">
                        <i class="fas fa-user-tie me-4"></i>
                        Danh sách phân công giáo viên
                    </h1>
                    <p class="assignment-subtitle">
                        Quản lý phân công giáo viên coi thi trong hệ thống
                    </p>
                </div>
                <div class="col-md-4 text-end">
                    <div class="d-flex justify-content-end">
                        <div class="text-white me-3">
                            <div class="fw-bold">@Model.Count()</div>
                            <small>Phân công</small>
                        </div>
                        <div class="text-white">
                            <div class="fw-bold">@Model.Select(p => p.GiaoVien).Distinct().Count()</div>
                            <small>Giáo viên</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Button -->
        @if (User.IsInRole("admin"))
        {
            <div class="text-center mb-4">
                <a asp-action="Create" class="assignment-btn assignment-btn-add pulse-animation">
                    <i class="fas fa-plus me-2"></i>
                    Phân công
                </a>
            </div>
        }

        <!-- Table Section -->
        <div class="assignment-card">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table assignment-table">
                        <thead>
                            <tr>
                                <th>
                                    <i class="fas fa-user-tie me-2"></i>
                                    Giáo viên
                                </th>
                                <th>
                                    <i class="fas fa-calendar-alt me-2"></i>
                                    Lịch thi
                                </th>
                                <th>
                                    <i class="fas fa-user-shield me-2"></i>
                                    Vai trò
                                </th>
                                <th>
                                    <i class="fas fa-cogs me-2"></i>
                                    Thao tác
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var roleClass = "";
                                var roleIcon = "";

                                switch (item.VaiTro?.ToLower())
                                {
                                    case "giám thị":
                                        roleClass = "assignment-role-supervisor";
                                        roleIcon = "fas fa-user-shield";
                                        break;
                                    case "phụ giám thị":
                                        roleClass = "assignment-role-assistant";
                                        roleIcon = "fas fa-user-check";
                                        break;
                                    case "quan sát":
                                        roleClass = "assignment-role-observer";
                                        roleIcon = "fas fa-eye";
                                        break;
                                    default:
                                        roleClass = "assignment-role-supervisor";
                                        roleIcon = "fas fa-user-tie";
                                        break;
                                }

                                <tr>
                                    <td>
                                        <span class="assignment-teacher">@item.GiaoVien?.HoTen</span>
                                    </td>
                                    <td>
                                        <span class="assignment-schedule">
                                            <i class="fas fa-calendar me-1"></i>
                                            Lịch thi #@item.LichThi?.ID_Lich
                                        </span>
                                    </td>
                                    <td>
                                        <span class="assignment-role @roleClass">
                                            <i class="@roleIcon me-1"></i>
                                            @item.VaiTro
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.ID_PC" class="assignment-btn assignment-btn-details">
                                            <i class="fas fa-eye me-1"></i>
                                            Chi tiết
                                        </a>
                                        @if (User.IsInRole("admin"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.ID_PC" class="assignment-btn assignment-btn-edit">
                                                <i class="fas fa-edit me-1"></i>
                                                Sửa
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.ID_PC" class="assignment-btn assignment-btn-delete">
                                                <i class="fas fa-trash me-1"></i>
                                                Xóa
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-user-tie" style="font-size: 5rem; color: #6c757d; margin-bottom: 20px;"></i>
                    <h3 style="color: #495057; margin-bottom: 15px;">Chưa có phân công nào</h3>
                    <p style="font-size: 1.1rem; color: #6c757d; margin-bottom: 25px;">Hãy tạo phân công đầu tiên để bắt đầu</p>
                    @if (User.IsInRole("admin"))
                    {
                        <a asp-action="Create" class="assignment-btn assignment-btn-add">
                            <i class="fas fa-plus me-2"></i>
                            Tạo phân công đầu tiên
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Enhanced animations
        document.addEventListener('DOMContentLoaded', function() {
            // Enhanced hover effects for table rows
            const tableRows = document.querySelectorAll('.assignment-table tbody tr');
            tableRows.forEach((row, index) => {
                row.style.animationDelay = `${index * 0.1}s`;
                
                row.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.03) translateX(8px)';
                    this.style.boxShadow = '0 10px 30px rgba(0, 0, 0, 0.2)';
                });
                
                row.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1) translateX(0)';
                    this.style.boxShadow = 'none';
                });
            });

            // Add ripple effect to buttons
            const buttons = document.querySelectorAll('.assignment-btn');
            buttons.forEach(button => {
                button.addEventListener('click', function(e) {
                    const ripple = document.createElement('span');
                    const rect = this.getBoundingClientRect();
                    const size = Math.max(rect.width, rect.height);
                    const x = e.clientX - rect.left - size / 2;
                    const y = e.clientY - rect.top - size / 2;
                    
                    ripple.style.width = ripple.style.height = size + 'px';
                    ripple.style.left = x + 'px';
                    ripple.style.top = y + 'px';
                    ripple.classList.add('ripple');
                    
                    this.appendChild(ripple);
                    
                    setTimeout(() => {
                        ripple.remove();
                    }, 600);
                });
            });
        });
    </script>
}